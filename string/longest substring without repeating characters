// Problem:longest substring without repeating characters
// Platform: leetcode
// Time Complexity: O(n)
// Space Complexity: O(1)


class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int l=0,r=0,maxlen=0;
        int hash[256];
        fill(hash, hash + 256, -1);

        int n=s.size();
         if(n==0) return 0;
        while(r<n){
           
            if(hash[s[r]] != -1) {
                if(hash[s[r]]>=l){
                    l=hash[s[r]] + 1;
                }
            }  
            int len=r-l+1;
            maxlen=max(len,maxlen);
            hash[s[r]]=r;
            r++; 
        }
       return maxlen; 
    }
};
