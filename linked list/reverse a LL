// Problem: reverse a LL
// Platform: GFG
// Time Complexity: O(n)
// Space Complexity: O(1)



class Solution {
  public:
    Node* reverseList(Node* head) {
        Node* prev = nullptr;
        Node* curr = head;

        while (curr != nullptr) {
            Node* nextNode = curr->next;
            curr->next = prev;           
            prev = curr;                
            curr = nextNode;             
        }

        return prev; // new head
    }
};
