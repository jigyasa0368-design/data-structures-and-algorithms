// Problem: LL cycle
// Platform: leetcode
// Approach: slow and fast pointer
// Time Complexity: O(n)
// Space Complexity: O(1)


class Solution {
public:
    bool hasCycle(ListNode *head) {
        ListNode* slow=head;
        ListNode* fast=head;
        if(head==NULL || head->next==NULL) return false;

        while(fast != NULL && fast->next != NULL){
            
            slow=slow->next;
            fast=fast->next->next;
            if(slow==fast) return true;
        }

        return false;
    }
};
