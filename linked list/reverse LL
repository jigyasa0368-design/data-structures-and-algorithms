// Problem: reverse LL 
// Platform: leetcode
// Time Complexity: O(n)
// Space Complexity: O(1)     

class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(head==NULL || head->next==NULL) return head; 
        ListNode* current=head;
       
        ListNode* prev=NULL;
        while(current!=NULL){                //use prev and next
            ListNode* nextnode=current->next;
            current->next=prev;
            prev=current;
            current=nextnode;
            

        }
    return prev;
    }
};
