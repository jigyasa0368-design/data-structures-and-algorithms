// Problem: Kadane's Algorithm
// Platform: GFG
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        // Code here
        int sum=0;
        int maxi=INT_MIN;
        for(int i=0;i<arr.size();i++){
            if(sum<0) sum=0;
            sum+=arr[i];
            maxi=max(maxi,sum);
        }
        return maxi;
    }
};
