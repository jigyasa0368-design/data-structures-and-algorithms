// Problem: Divide an Array Into Subarrays With Minimum Cost I
// Platform: leetcode
// Time Complexity: O(n^2)
// Space Complexity: O(1)

class Solution {
public:
    int minimumCost(vector<int>& nums) {
        int n = nums.size();
        int ans = INT_MAX;

        for (int i = 1; i < n; i++) {
            for (int j = i + 1; j < n; j++) {
                ans = min(ans, nums[0] + nums[i] + nums[j]);
            }
        }

        return ans;
    }
};
