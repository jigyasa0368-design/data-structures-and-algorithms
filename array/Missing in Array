// Problem: Missing in Array
// Platform: GFG
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
public:
    int missingNum(vector<int>& arr) {
        long long n = arr.size() + 1;

        long long totalSum = n * (n + 1) / 2;
        long long sum = 0;

        for (int i = 0; i < arr.size(); i++) {
            sum += arr[i];
        }

        return (int)(totalSum - sum);
    }
};
