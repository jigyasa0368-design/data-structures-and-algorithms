// Problem: check if array is sorted
// Platform: GFG
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
  public:
    bool isSorted(vector<int>& arr) {
        // code here
        for(int i=1;i<arr.size();i++){
            if(arr[i]>=arr[i-1])  {
                
            }
            else{
                return false;
            }
            
        }
        return true;
    }
};
