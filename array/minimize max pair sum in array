// Problem: minimize max pair sum in array
// Platform: leetcode
// Approach: 2 pointer
// Time Complexity: O(n log n) use sorting
// Space Complexity: O(1)

class Solution {
public:
    int minPairSum(vector<int>& nums) {
        int maxi=INT_MIN;
        int sum=0;
        sort(nums.begin(), nums.end());
        int i=0;
        int j=nums.size()-1;
        while(i<j){
          sum=nums[i]+nums[j];
          maxi=max(maxi,sum);
          i++;
          j--;
        }
       
    return maxi;    
    }
};
